    <tr>
        <td class="style10">
            Name:</td>
        <td>
            <asp:TextBox ID="TextBox2" runat="server" CssClass="style9" Width="316px"></asp:TextBox>
        </td>
    </tr>
    <tr>
        <td class="style10">
            Company Name:</td>
        <td>
            <asp:TextBox ID="TextBox3" runat="server" CssClass="style9" Width="316px"></asp:TextBox>
        </td>
    </tr>
    <tr>
        <td class="style10">
            Manufacture Date:</td>
        <td>
            <asp:TextBox ID="TextBox4" runat="server" CssClass="style9" Width="316px"></asp:TextBox>
        </td>
    </tr>
    <tr>
        <td class="style10">
            Manufacture Exp.Date:</td>
